<assembly>
    <id>berkeleyje-${project.version}</id>
    <baseDirectory>titan-berkeleyje-${project.version}</baseDirectory>

    <formats>
        <format>zip</format>
        <format>tar.bz2</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>../src/assembly/skel</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../../config</directory>
        </fileSet>
        <fileSet>
            <directory>../../bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>berkeley*</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>../../CHANGELOG.textile</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>../../LICENSE.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>../../NOTICE.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>../../UPGRADE.textile</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>

    <dependencySets>
        <!-- Entire jar dependency graph -->
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <useProjectArtifact>false</useProjectArtifact>
            <excludes>
                <exclude>${project.groupId}:titan-site:zip:htdocs:${project.version}</exclude>
            </excludes>
        </dependencySet>

        <!-- HTML copy of Wikidoc and Javadoc -->
        <dependencySet>
            <unpack>true</unpack>
            <outputDirectory>/doc</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>${project.groupId}:titan-site:zip:htdocs:${project.version}</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
