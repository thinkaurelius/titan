                                        <goal>verify</goal>
                                    </goals>
                                    <configuration>
                                        <failIfNoTests>true</failIfNoTests>
                                    </configuration>
                                </execution>
                            </executions>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
    </profiles>
